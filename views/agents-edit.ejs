<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
</head>

<body>
    <%- include('partials/nav') %>
        <div class="container-lg" id="container-table">

            <form action="/agents/<%= id %>/update" method="POST">
                <h1 class="mt-5 mb-5"><i class="fa-solid fa-user" aria-hidden="true"></i> Agents </h1>
                <fieldset>

                    <legend>Modification d'un agent</legend>

                    <table>
                        <div class="input-group mb-3">
                            <div class="m-1">
                                <tr>
                                    <td>
                                        ID :
                                    </td>
                                    <td><input type="text" class="form-control m-1" name="id" value="<%= id %>"></td>
                                </tr>
                                <tr>
                                    <td>Matricule : </td>
                                    <td>
                                        <div class="input-group m-1"><span class="input-group-text"
                                                id="basic-addon1">A</span>
                                            <input type="number" class="form-control m-1" maxlength="50"
                                                name="matricule" autofocus placeholder="Obligatoire"
                                                value="<%= matricule %>">
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Nom : </td>
                                    <td><input type="text" class="form-control m-1"
                                            onkeyup="this.value = this.value.toUpperCase();" maxlength="50"
                                            name="lastname" placeholder="Obligatoire" value="<%= lastname %>">
                                    </td>
                                </tr>
                                <tr>
                                    <td>Prenom : </td>
                                    <td><input type="text" class="form-control m-1"
                                            onkeyup="this.charAt(0).toUpperCase() + this.slice(1)" maxlength="50"
                                            name="firstname" placeholder="Obligatoire" value="<%= firstname %>">
                                    </td>
                                </tr>

                                <tr>
                                    <td>Date de naissance : </td>
                                    <td><input type="date" class="form-control m-1" maxlength="50" name="birthday"
                                            value="<%= birthday %>">
                                    </td>
                                </tr>
                                <tr>
                                    <td>Adresse : </td>
                                    <td><input type="text" class="form-control m-1" maxlength="50" name="adresse"
                                            placeholder="Adresse" value="<%= adresse %>"></td>
                                </tr>
                                <tr>
                                    <td>Code Postal : </td>
                                    <td><input type="text" class="form-control m-1" maxlength="50" name="cp"
                                            placeholder="Code Postal" value="<%= cp %>"></td>
                                </tr>
                                <tr>
                                    <td>Téléphone : </td>
                                    <td><input type="text" class="form-control m-1" maxlength="50" name="tel"
                                            placeholder="Téléphone" value="<%= tel %>"></td>
                                </tr>
                                <tr>
                                    <td><label class="form-label"></label></td>
                                    <td></td>
                                </tr>


                                <div class="button-group m-3">
                                    <tr>
                                        <td>
                                            <input type="reset" name="bInit" value="Réinitialiser" class="btn bg-danger
                                                                m-1 text-white" />
                                        </td>
                                        <td>
                                            &nbsp;<input type="submit" name="bModifAgent" value="Modifier"
                                                class="btn btn-primary m-1">
                                        </td>
                                    </tr>
                                </div>
                            </div>
                    </table>
                </fieldset>
            </form>
            <% if (errors.length) { %>

                <div class="alert alert-danger mt-4 mb-2" role="alert">
                    <%= errors[0] %>
                </div>

                <% } %>
        </div>
        <%- include('partials/footer') %>

            <%- include('partials/scripts') %>
</body>

</html>